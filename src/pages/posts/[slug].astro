---
import { getCollection, getEntry } from "astro:content";
import Layout from "../../layouts/Layout.astro";
import TableOfContents from "../../components/TableOfContents.astro";
import PostComments from "../../components/PostComments.astro";
export const prerender = true;
import { Image } from "astro:assets";
export async function getStaticPaths() {
  const posts = await getCollection("posts");
  return posts.map(({ slug }) => ({ params: { slug } }));
}

const { slug } = Astro.params;
const post = await getEntry("posts", slug);

if (!post) throw new Error(`Post “${slug}” not found`);
const { Content } = await post.render();

var options = { year: 'numeric', month: 'long', day: 'numeric' };
---

<Layout seo={{ title: post.data.title, description: post.data.description }}>
  <article class="prose max-w-4xl mx-auto p-2">
    <Image
      src={post.data.cover}
      alt={post.data.title}
      width={900}
      height={500}
      class="mx-auto my-8 rounded-lg shadow-md"
    />
    <div class="text-center">
      <div class="mb-0 mt-0 badge badge-primary mx-auto text-2xl">{post.data.category}</div>
    </div>
    <h1 class="text-center mb-2 mt-2">{post.data.title}</h1>
    <p class="text-md text-black/70 text-center font-bold mb-4 mt-0">
      Last Updated: {new Date(post.data.date).toLocaleDateString("en-us", options)}
    </p>
    <Content />
    <PostComments />
  </article>
  <div class="flex justify-center mt-8">
    <a href="/posts" class="btn btn-primary">Back to all posts</a>
  </div>
  <div slot="table-of-contents">
    <TableOfContents slug={slug}/>
  </div>
</Layout>