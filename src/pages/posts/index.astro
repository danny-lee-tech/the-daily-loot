---
title: "Posts";
import { getCollection } from "astro:content";
import Layout from "../../layouts/Layout.astro";
import { Image } from "astro:assets";
const posts = await getCollection("posts");
const filteredPosts = posts.filter(post => !post.data.draft);
---

<Layout seo={{ title: "Posts", description: "A collection of blog posts around strategies in keeping your loot." }}>
  <h1 class="text-2xl font-semibold p-4">Posts</h1>
  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4 p-4">
    {filteredPosts
      .sort((a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime())
      .map(v => (
        <a href={`/posts/${v.slug}/`} class="card card-border bg-base-200 shadow-xl hover:shadow-2xl transition-shadow duration-300 ease-in-out">
            <div class="bg-white m-2">
              <Image 
                src={v.data.cover}
                alt={v.data.title}
                width={560}
                height={315}
                class="w-full object-contain h-[200px]"
              />
            </div>
          <div class="card-body">
            <h2 class="card-title">{v.data.title}</h2>
            <p class="text-sm text-base-content/70">{new Date(v.data.date).toLocaleDateString()}</p>
            <p class="badge badge-primary">{v.data.category}</p>
          </div>
        </a>
      ))}
  </div>
</Layout>